{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "annotations": {
      "cluster-autoscaler.kubernetes.io/safe-to-evict": "false"
    },
    "labels": {
      "app": "tq2-app"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "app",
        "image": "568278658148.dkr.ecr.sa-east-1.amazonaws.com/tq2-app:latest",
        "args": [
          "eval", "Tq2.Release.migrate()"
        ],
        "env": [
          {
            "name": "MIX_ENV",
            "value": "production"
          },
          {
            "name": "APP_SUBDOMAIN",
            "valueFrom": {
              "configMapKeyRef": {
                "key": "appSubdomain",
                "name": "tq2-app-config"
              }
            }
          },
          {
            "name": "STORE_SUBDOMAIN",
            "valueFrom": {
              "configMapKeyRef": {
                "key": "storeSubdomain",
                "name": "tq2-app-config"
              }
            }
          },
          {
            "name": "CREDENTIALS_PATH",
            "valueFrom": {
              "configMapKeyRef": {
                "key": "credentialsPath",
                "name": "tq2-app-config"
              }
            }
          },
          {
            "name": "DATABASE_URL",
            "valueFrom": {
              "secretKeyRef": {
                "key": "databaseUrl",
                "name": "tq2-app-secrets"
              }
            }
          },
          {
            "name": "REDIS_URL",
            "valueFrom": {
              "secretKeyRef": {
                "key": "redisUrl",
                "name": "tq2-app-secrets"
              }
            }
          },
          {
            "name": "SECRET_KEY_BASE",
            "valueFrom": {
              "secretKeyRef": {
                "key": "secretKeyBase",
                "name": "tq2-app-secrets"
              }
            }
          },
          {
            "name": "EMAIL_ADDRESS",
            "valueFrom": {
              "configMapKeyRef": {
                "key": "emailAddress",
                "name": "tq2-app-config"
              }
            }
          },
          {
            "name": "DEFAULT_SHEET_ID",
            "valueFrom": {
              "configMapKeyRef": {
                "key": "defaultSheetId",
                "name": "tq2-app-config"
              }
            }
          },
          {
            "name": "AWS_S3_BUCKET",
            "valueFrom": {
              "configMapKeyRef": {
                "key": "awsS3Bucket",
                "name": "tq2-app-config"
              }
            }
          },
          {
            "name": "AWS_REGION",
            "valueFrom": {
              "configMapKeyRef": {
                "key": "awsRegion",
                "name": "tq2-app-config"
              }
            }
          },
          {
            "name": "AWS_ACCESS_KEY_ID",
            "valueFrom": {
              "secretKeyRef": {
                "key": "awsAccessKeyId",
                "name": "tq2-app-secrets"
              }
            }
          },
          {
            "name": "AWS_SECRET_ACCESS_KEY",
            "valueFrom": {
              "secretKeyRef": {
                "key": "awsSecretAccessKey",
                "name": "tq2-app-secrets"
              }
            }
          },
          {
            "name": "SENTRY_DSN",
            "valueFrom": {
              "secretKeyRef": {
                "key": "sentryDsn",
                "name": "tq2-app-secrets"
              }
            }
          },
          {
            "name": "STRIPE_PUBLIC_KEY",
            "valueFrom": {
              "configMapKeyRef": {
                "key": "stripePublicKey",
                "name": "tq2-app-config"
              }
            }
          },
          {
            "name": "STRIPE_API_KEY",
            "valueFrom": {
              "secretKeyRef": {
                "key": "stripeApiKey",
                "name": "tq2-app-secrets"
              }
            }
          },
          {
            "name": "PERFIT_ENDPOINT",
            "valueFrom": {
              "configMapKeyRef": {
                "key": "perfitEndpoint",
                "name": "tq2-app-config"
              }
            }
          },
          {
            "name": "PERFIT_API_KEY",
            "valueFrom": {
              "secretKeyRef": {
                "key": "perfitApiKey",
                "name": "tq2-app-secrets"
              }
            }
          }
        ],
        "volumeMounts": [
          {
            "name": "tq2-app-secret-volume",
            "mountPath": "/opt/app/config/app_credentials.json",
            "subPath": "app_credentials.json"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "tq2-app-secret-volume",
        "secret": {
          "secretName": "tq2-app-secrets"
        }
      }
    ],
    "restartPolicy": "Never"
  }
}
