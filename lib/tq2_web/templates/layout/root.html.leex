<!doctype html>
<html lang="<%= locale() %>">
  <head>
    <%= csrf_meta_tag() %>
    <%= live_title_tag assigns[:page_title] || gettext("Teiqui"), suffix: " Â· #{gettext("Teiqui")}" %>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" type="image/svg+xml" href="<%= Routes.static_path(@conn, "/images/favicon.svg") %>" sizes="any">
    <link rel="icon" type="image/png" href="<%= Routes.static_path(@conn, "/images/favicon.png") %>" sizes="64x64">
    <link rel="apple-touch-icon" href="<%= Routes.static_path(@conn, "/images/apple-touch-icon.png") %>" sizes="152x152">

    <link phx-track-static rel="stylesheet" href="<%= Routes.static_path(@conn, "/css/app.css") %>">

    <script defer phx-track-static src="<%= Routes.static_path(@conn, "/js/app.js") %>"></script>

    <%= hotjar_script() %>
    <%= google_analytics_script(@conn) %>
    <%= facebook_pixel_script() %>
  </head>

  <body class="<%= body_classes @conn, @current_session %>" data-spy="scroll" data-target="#main-menu" data-offset="50">
    <%= if @current_session do %>
      <div class="mt-5 pt-5">
        <%= @inner_content %>
      </div>

      <%= menu @conn, @current_session %>
    <% else %>
      <%= @inner_content %>
    <% end %>
  </body>
</html>
