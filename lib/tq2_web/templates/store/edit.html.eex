<div class="card my-3">
  <div class="card-header">
    <h2 class="h5">
      <%= dgettext("stores", "Edit store") %>
    </h2>
  </div>

  <div class="card-body">
    <div class="alert alert-info">
      <%= raw dgettext("stores", "Your store is published on %{link}", link: public_store_link(@store)) %>
    </div>

    <%= render "_form.html", Map.put(assigns, :action, Routes.store_path(@conn, :update)) %>
  </div>
</div>
