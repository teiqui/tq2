<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger rounded-pill">
      <p class="mb-0"><%= dgettext("categories", "Oops, something went wrong! Please check the errors below.") %></p>
    </div>
  <% end %>

  <%= input f, :name, dgettext("categories", "Name"), input_html: [autofocus: true] %>

  <%= lock_version_input f, assigns[:category] %>

  <div class="text-right">
    <%= submit_button assigns[:category] %>
  </div>
<% end %>
