<div class="card my-3">
  <div class="card-header">
    <h2 class="h5">
      <%= dgettext("categories", "Category") %>
    </h2>
  </div>

  <div class="card-body">
    <p class="mb-1">
      <strong><%= dgettext("categories", "Name") %></strong>:
      <%= @category.name %>
    </p>
  </div>
</div>

<div>
  <%= link_to_edit @conn, @category %> |
  <%= link dgettext("categories", "Back"), to: Routes.category_path(@conn, :index) %>
</div>
