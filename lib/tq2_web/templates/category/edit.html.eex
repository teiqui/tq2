<div class="card my-3">
  <div class="card-header">
    <h2 class="h5">
      <%= dgettext("categories", "Edit category") %>
    </h2>
  </div>

  <div class="card-body">
    <%= render "_form.html", Map.put(assigns, :action, Routes.category_path(@conn, :update, @category)) %>
  </div>
</div>

<div class="mt-3">
  <%= link dgettext("categories", "Back"), to: Routes.category_path(@conn, :index) %>
</div>
