<div class="card my-3">
  <div class="card-header">
    <h2 class="h5"><%= Enum.join([@user.name, @user.lastname], " ") %></h2>
  </div>
  <div class="card-body">
    <p class="mb-1">
      <strong><%= dgettext("users", "Email") %></strong>:
      <%= link @user.email, to: "mailto:#{@user.email}" %>
    </p>
  </div>
</div>

<div>
  <%= link_to_edit @conn, @user %> |
  <%= link dgettext("users", "Back"), to: Routes.user_path(@conn, :index) %>
</div>
